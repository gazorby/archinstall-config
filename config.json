{
  "audio": "pipewire",
  "bootloader": "systemd-bootctl",
  "custom-commands": [
    "usermod -aG docker gazorby",
    "pacman-key --init",
    "pacman-key --recv-key FBA220DFC880C036 --keyserver keyserver.ubuntu.com",
    "pacman-key --lsign-key FBA220DFC880C036",
    "pacman -U --noconfirm 'https://cdn-mirror.chaotic.cx/chaotic-aur/chaotic-keyring.pkg.tar.zst' 'https://cdn-mirror.chaotic.cx/chaotic-aur/chaotic-mirrorlist.pkg.tar.zst'",
    "echo -e '\n[chaotic-aur]\nInclude = /etc/pacman.d/chaotic-mirrorlist\n' | sudo tee -a /etc/pacman.conf",
    "pacman -Syyu --noconfirm paru downgrade powerpill asdf-vm"
  ],
  "filesystem": "btrfs",
  "gfx_driver": "VMware / VirtualBox (open-source)",
  "harddrives": [
    "/dev/sda"
  ],
  "hostname": "bigbox",
  "kernels": [
    "linux"
  ],
  "keyboard-language": "us",
  "mirror-region": {
    "France": {
      "https://archlinux.vi-di.fr/$repo/os/$arch": true,
      "https://mirror.cyberbits.eu/archlinux/$repo/os/$arch": true,
      "https://mirrors.eric.ovh/arch/$repo/os/$arch": true,
      "https://mirrors.gandi.net/archlinux/$repo/os/$arch": true,
      "https://mirror.ibakerserver.pt/Arch/$repo/os/$arch": true,
      "https://arch.juline.tech/$repo/os/$arch": true,
      "https://mirroir.labhouse.fr/arch/$repo/os/$arch": true,
      "https://arch-mirror.cloud.louifox.house/$repo/os/$arch": true,
      "https://archlinux.mailtunnel.eu/$repo/os/$arch": true,
      "https://mirrors.celianvdb.fr/archlinux/$repo/os/$arch": true,
      "https://arch.nimukaito.net/$repo/os/$arch": true,
      "https://mirror.oldsql.cc/archlinux/$repo/os/$arch": true,
      "https://mirrors.slaanesh.org/archlinux/$repo/os/$arch": true,
      "https://mirror.sysa.tech/archlinux/$repo/os/$arch": true,
      "https://mirror.thekinrar.fr/archlinux/$repo/os/$arch": true,
      "https://mirror.theo546.fr/archlinux/$repo/os/$arch": true,
      "https://mirror.wormhole.eu/archlinux/$repo/os/$arch": true,
      "https://mirroir.wptheme.fr/archlinux/$repo/os/$arch": true,
      "https://arch.yourlabs.org/$repo/os/$arch": true
    }
  },
  "nic": {
    "type": "nm"
  },
  "ntp": true,
  "packages": [
    "bash",
    "bat",
    "binutils",
    "bpython",
    "chezmoi",
    "docker",
    "dust",
    "exa",
    "fakeroot",
    "fd",
    "fish",
    "fzf",
    "git",
    "git-delta",
    "highlight",
    "htop",
    "hyperfine",
    "neofetch",
    "neovim",
    "openssh",
    "procs",
    "ripgrep",
    "snap-pac",
    "snapper",
    "starship",
    "ufw",
    "wget",
    "yarn"
],
  "profile": "kde",
  "services": [
    "NetworkManager.service",
    "docker.service",
    "snapper-timeline.timer"
  ],
  "swap": true,
  "sys-encoding": "utf-8",
  "sys-language": "en_US",
  "timezone": "Europe/Paris"
}
