{
  "config_version": "2.5.1",
  "version": "2.5.1",
  "additional-repositories": [
    "multilib"
  ],
  "archinstall-language": "English",
  "audio": "pipewire",
  "bootloader": "systemd-bootctl",
  "custom-commands": [
    "usermod -aG docker gazorby",
    "pacman-key --init",
    "pacman-key --populate archlinux",
    "pacman-key --recv-key FBA220DFC880C036 --keyserver keyserver.ubuntu.com",
    "pacman-key --lsign-key FBA220DFC880C036",
    "pacman -U --noconfirm 'https://cdn-mirror.chaotic.cx/chaotic-aur/chaotic-keyring.pkg.tar.zst' 'https://cdn-mirror.chaotic.cx/chaotic-aur/chaotic-mirrorlist.pkg.tar.zst'",
    "echo -e '\n[chaotic-aur]\nInclude = /etc/pacman.d/chaotic-mirrorlist\n' | sudo tee -a /etc/pacman.conf",
    "pacman -Syy",
    "pacman -R --noconfirm gnome-software-packagekit-plugin archlinux-appstream-data",
    "pacman -Sy --noconfirm paru downgrade powerpill asdf-vm nerd-fonts-fira-code ttf-twemoji",
    "echo 'gazorby ALL = NOPASSWD: /usr/sbin/paru' | EDITOR='tee -a' visudo",
    "echo 'gazorby ALL = NOPASSWD: /usr/sbin/pacman' | EDITOR='tee -a' visudo",
    "sudo -u gazorby paru -S --noconfirm xkb-altgr-weur snapper-rollback",
    "head -n -2 /etc/sudoers > /etc/sudoers",
    "chsh -s /bin/fish gazorby"
  ],
  "filesystem": "btrfs",
  "gfx_driver": "VMware / VirtualBox (open-source)",
  "harddrives": [
    "/dev/sda"
  ],
  "hostname": "bigbox",
  "kernels": [
    "linux"
  ],
  "keyboard-language": "us",
  "mirror-region": "France",
  "nic": {
    "dhcp": true,
    "dns": null,
    "gateway": null,
    "iface": null,
    "ip": null,
    "type": "nm"
  },
  "ntp": true,
  "packages": [
    "bash",
    "bat",
    "binutils",
    "bpython",
    "chezmoi",
    "docker",
    "dust",
    "exa",
    "fakeroot",
    "fd",
    "fish",
    "fzf",
    "git",
    "git-delta",
    "highlight",
    "htop",
    "hyperfine",
    "neofetch",
    "neovim",
    "openssh",
    "procs",
    "ripgrep",
    "snap-pac",
    "snapper",
    "starship",
    "ufw",
    "wget",
    "yarn",
    "bitwarden-cli",
    "jq",
    "git-delta",
    "duf",
    "tldr",
    "bottom",
    "xh",
    "fx",
    "fq",
    "mcfly",
    "broot",
    "vivid",
    "chafa",
    "hexyl",
    "unzip",
    "man"
  ],
  "profile": "gnome",
  "services": [
    "NetworkManager.service",
    "docker.service",
    "snapper-timeline.timer"
  ],
  "swap": true,
  "sys-encoding": "utf-8",
  "sys-language": "en_US",
  "timezone": "Europe/Paris"
}
